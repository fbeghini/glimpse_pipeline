process.container = "/home/fb343/christakis_loan/glimpse_v1.1.1.sif"
singularity.enabled = true

params {
	reference_genome= "/gpfs/ycga/datasets/genomes/Homo_sapiens/UCSC/hg38/Sequence/WholeGenomeFasta/genome.fa"
	sam_files = "/gpfs/ycga/scratch60/christakis/fb343/gatk/out_hg38/aligned_reads/*sam"
	study_vcf = "/gpfs/ycga/scratch60/christakis/fb343/gatk/out_hg38/aligned_reads/*vcf.gz"
	reference_vcfs = "/gpfs/ycga/project/christakis/fb343/databases/20201028_3202_phased/*phased.vcf.gz"
	reference_sites_vcfs = "/gpfs/ycga/project/christakis/fb343/databases/20201028_3202_phased/*sites.vcf.gz"
	window_size = 2000000
	buffer_size = 200000
	glimpse_maps = "/home/fb343/git/GLIMPSE/maps/genetic_maps.b38/"
	concatenate = true
	out = "/gpfs/ycga/scratch60/christakis/fb343/gatk/imputed"
}

process {
	executor = "slurm"
//	executor = "local"
	cpus = 12
	time = "12h"
	memory = "4GB"
}

executor {
	$slurm {
		queueSize = 1000
		queue = "scavenge"
		jobName = { "imputation" }
	}
	$local {
		cpus = 1
	}
}
